@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@* This list is to render the radio buttons dynamically *@
@{
    var arr = new[]
    {
        new { name = "rock", val = "حجرة", icon = "🪨" },
        new { name = "paper", val = "ورقة", icon = "📄" },
        new { name = "scissors", val = "مقص", icon = "✂️" }
    };
}

<style>
    .main-div {
        background: #FFF6E9;
        height: 100vh;
        width: 100vw;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .form-style {
        background: #80C4E9;
        height: 60vh;
        width: 60vw;
        padding: 20px;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .choice-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin: 20px 0;
    }

    .radio-button {
        display: none;
    }

    .radio-label {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: #fd7e14;
        color: white;
        padding: 10px;
        border-radius: 8px;
        cursor: pointer;
        width: 100px;
        height: 100px;
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .radio-label:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

    .radio-button:checked + .radio-label {
        background: #4caf50;
    }

    .radio-label span {
        font-size: 2rem;
        margin-bottom: 5px;
    }

    .submit-button {
        margin-top: 20px;
        padding: 10px 20px;
        background: #5A9;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<div class="main-div">
    <form class="form-style" action="">
        
        <div class="choice-container">
            @foreach (var element in arr)
            {
                <div>
                    <input type="radio" id="@element.name" name="choice" value="@element.name" class="radio-button" />
                    <label for="@element.name" class="radio-label">
                        <span>@element.icon</span>
                        <span>@element.val</span>
                    </label>
                </div>
            }
        </div>
        <input type="submit" value="العب" class="submit-button" />
    </form>
    @{
        if (ViewData["message"] != null)
        {
            <h1>@ViewData["message"]</h1>
            <h1>You Select :@ViewData["human"]</h1>
            <h1>Computer Select : @ViewData["computer"]</h1>
            
        }
    }
    
</div>
